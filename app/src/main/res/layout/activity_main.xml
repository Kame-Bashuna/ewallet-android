<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tvIncome"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/income" />

    <TextView
        android:id="@+id/rvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="55dp"
        android:text="MONEY-IN"
        app:layout_constraintStart_toEndOf="@+id/tvIncome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rvMoneyBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Ksh 42,400"
        app:layout_constraintStart_toEndOf="@+id/tvIncome"
        app:layout_constraintTop_toBottomOf="@+id/rvMoney" />

    <ImageView
        android:id="@+id/rvIncome"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toEndOf="@+id/rvMoneyBalance"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/expense" />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="55dp"
        android:text="MONEY-OUT"
        app:layout_constraintStart_toEndOf="@+id/rvIncome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:text="Ksh 23,700"
        app:layout_constraintStart_toEndOf="@+id/rvIncome"
        app:layout_constraintTop_toBottomOf="@+id/tvMoney" />

    <ImageView
        android:id="@+id/tvBalance"
        android:layout_width="59dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIncome"
        app:srcCompat="@drawable/balance" />

    <TextView
        android:id="@+id/rvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="43dp"
        android:text="BALANCE"
        app:layout_constraintStart_toEndOf="@+id/tvBalance"
        app:layout_constraintTop_toBottomOf="@+id/rvMoneyBalance" />

    <TextView
        android:id="@+id/rvBalanceMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:text="Ksh 18,700"
        app:layout_constraintStart_toEndOf="@+id/tvBalance"
        app:layout_constraintTop_toBottomOf="@+id/rvBalance" />

    <ImageView
        android:id="@+id/tvTransaction"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toEndOf="@+id/rvBalanceMoney"
        app:layout_constraintTop_toBottomOf="@+id/rvIncome"
        app:srcCompat="@drawable/transactions" />

    <TextView
        android:id="@+id/rvTranscation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="45dp"
        android:text="TRANSACTION"
        app:layout_constraintStart_toEndOf="@+id/tvTransaction"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="Ksh 0"
        app:layout_constraintStart_toEndOf="@+id/tvTransaction"
        app:layout_constraintTop_toBottomOf="@+id/rvTranscation" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tvRecycler"
        android:layout_width="383dp"
        android:layout_height="490dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>